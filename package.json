{
  "name": "wordpress-monorepo",
  "private": true,
  "workspaces": [
    "wordpress-nginx",
    "wordpress-php-fpm"
  ],
  "scripts": {
    "build": "docker compose --profile build build",
    "start": "docker compose --profile up up --force-recreate",
    "stop": "docker compose --profile up down"
  }
}
